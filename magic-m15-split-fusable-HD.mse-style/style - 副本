	type: boolean
	name: is foil
	description: 是否为闪卡？
	initial: no
styling field:
	type: text
	name: font size cap
	description: Maximum font size for both textboxes, or "X,Y" to set individual caps
styling field:
	type: multiple choice
	name: other options
	choice: ancestral generic mana
	choice: prerelease stamp
	choice: use phyrexian font

