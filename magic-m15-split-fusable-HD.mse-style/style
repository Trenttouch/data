			size: { if set.card_language != "简体中文" then 32- shrink_name() else 34- shrink_name() }
			color: black
	
	casting cost:
		right: 514
		top: {if is_room() then 47 else 61}
		width: { max(60, card_style.casting_cost.content_width) + 10 }
