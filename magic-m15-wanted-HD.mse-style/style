		alignment: top center shrink-overflow
		font:
			name: { if set.card_language != "简体中文" then "Davison Americana CG" else "MEliteHeiPRCW00-Xbold" }
			size: { if set.card_language != "简体中文" then 75-12 - shrink_name_2() else 58 - shrink_name_2()}
			color: { rgb(82, 60, 41) }

	casting cost:

