	name 2:
		left: { 375 - max(100,card_style.name_2.content_width)*0.5 }
		right: { 375 + max(100,card_style.name_2.content_width)*0.5 }
		top: { if chosen(styling.others, choice:"reverse name place") then 80 else 124 }
		height: { 85 }
