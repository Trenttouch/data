
############################################################## We have keywords

has keywords: true

############################################################## Keyword mode

keyword mode:
	name: old
	description: 弃用关键字(结合、时间跳跃等)
keyword mode:
	name: core
	description: 核心关键字 (飞行、敏捷等)
keyword mode:
	name: expert
	description: 扩展系列关键字 (循环、消逝等)
keyword mode:
	name: pseudo
	description: 关键字提示 (背水战、门槛等)
keyword mode:
	name: action
	description: 关键字动作，说明文字在段末(占卜、重生等)
keyword mode:
	is default: true
	name: custom
	description: 自定义关键字

############################################################## Keyword parameter types

keyword parameter type:
	name: mana
	match: [HSVCTQXYZI0-9WUBRG/|]+
	refer script:
		name: normal
		description: No changes made
		script: \{{input}\}
	refer script:
		name: mana value
		description: Converts mana to number
		# "0" left in so users can easily see how to edit script.
		script: \{cmc({input})\}
	refer script:
		name: colored mana cost
		description: Converts mana to number of colored mana
		# "0" left in so users can easily see how to edit script.
		script: \{colored_mana({input})\}

# By pichoro and bunnierein
keyword parameter type:
	name: cost
	match: [ ][HSVECTQXYZI0-9WUBRG/|]*|[-—][^(\r\n]*
	separator before is: [ --]
	separator after is: [.]
	optional: false
	# note: the separator is part of match
	refer script:
		name: normal
		description: When using mana only costs, doesn't include anything extra in the reminder text
		script: \{{input}\}
	refer script:
		name: add "pay an additional " for mana costs
		description: When using mana only costs, words the reminder text as "pay an additional$<cost>"
		script: \{for_mana_costs(add:"pay an additional ", {input})\}
	refer script:
		name: add "pay " for mana costs
		description: When using mana only costs, words the reminder text as "pay$<cost>"
		script: \{for_mana_costs(add:"pay ", {input})\}
	separator script: long_dash()

keyword parameter type:
	name: number
	match: [XYZ0-9]+
	refer script:
		name: normal
		description: (1,2,3)
		script: \{{input}\}
	refer script:
		name: as words
		description: (one, two, three)
		script: \{english_number({input})\}
	refer script:
		name: as words, use "a" for 1
		description: (a, two, three)
		script: \{chinese_number({input})\}
	refer script:
		name: as words, use "" for 1
		description: (, two, three)
		script: \{english_number_multiple({input})\}
	refer script:
		name: as ordinal words
		description: (first, second, third)
		script: \{english_number_ordinal({input})\}

keyword parameter type:
	name: action
	match: [^(:\n]+
	separator after is: [.]
	reminder script: alternative_cost()

keyword parameter type:
	name: one_word
	match: [A-Za-z0-9]+
keyword parameter type:
	name: p
	match: [p](?!ped)(?!ment)
keyword parameter type:
	name: name
	match: ([^(.:;\n—]+|[ ])
	#match: [A-Za-z0-9 ',’"“”!?]+
	refer script:
		name: normal
		description: No changes made.
		script: \{{input}\}
	refer script:
		name: singular
		description: Removes plurality from words.
		script: \{english_singular({input})\}
	refer script:
		name: separate words with "and/or"
		description: Changes spaces to " and/or ". "Elf Warrior" becomes "Elf and/or Warrior".
		script: \{separate_words(spacer: " and/or ", {input})\}
	refer script:
		name: separate words with "or"
		description: Changes spaces to " or ". "Elf Warrior" becomes "Elf or Warrior".
		script: \{separate_words(spacer: " or ", {input})\}

keyword parameter type:
	name: prefix
	description: Prefix for things like "<something>walk"
	optional: false
#	match: [A-Z][a-z, ]*([A-Z][a-z, ]*\xEB00) # commented out because it stopped prefix param from working, version below allows all "walks", including "Dame Judi Denchwalk", doesn't trigger #in middle of sentences, and doesn't trigger in chains of keywords.
#	match: [A-Z][A-Z,a-z’ ]* # commented out due to still not working
	match: [^(.,”":;\n—]+
	example: Forest
keyword parameter type:
	name: typecn
	description: 中文类别索引
	optional: false
#	match: [A-Z][a-z, ]*([A-Z][a-z, ]*\xEB00) # commented out because it stopped prefix param from working, version below allows all "walks", including "Dame Judi Denchwalk", doesn't trigger #in middle of sentences, and doesn't trigger in chains of keywords.
	match: [(基本|传奇|部族|雪境|普世|古咒|生物|神器|神器生物|结界|瞬间|法术|地|结界生物|鹏洛客|诡局|人类|猫|天使|精怪|鸟|人鱼|灵俑|惊惧兽|吸血鬼|元素|鬼怪|巨人|龙|野兽|妖精|昆虫|阿托格|矮人|奥夫|奥扎奇|半人马|半兽人|蝙蝠|变形兽|稻草人|地狱兽|钉兽|独角兽|独眼巨人|恶魔|鳄鱼|凡尔西诺|飞马|凤凰|盖美拉|攻城巨车|龟|海怪|狐|化身|洁英|巨海兽|巨灵|巨魔|巨蛇|卡甫|寇族|骷髅妖|狼|狼人|立吸怪|猎犬|裂片妖|流浆|龙兽|马|梦魇|麋鹿|秘耳|魔鬼|魔神|魔像|那迦|宁芙|牛|牛头怪|奴兽|墙|蛇|蛇发妖|神|圣者|狮鹫|石像鬼|食人魔|史芬斯|鼠|树灵|树妖|索尔兽|统领|蛙|维多肯|犀牛|蜥怪|蜥蜴|仙灵|象|小恶魔|蟹|熊|虚影|雪怪|亚龙|羊蹄人|野猪|夜潜魔|以太种|阴魂|幽灵|鱼|猿猴|月人|造妖|章人|真菌|振翼机|蜘蛛|植物|蛭|组构体|稀有|矮从瓦格|哔宝精|病菌|病媒|袋熊|道西|地侏|法球|仿索蓝人|分节|腐生物|怪灵|怪奇|光蛾|鬼魂鬼仔|哈痞|海绵|海星|害虫|河马|荷马利|猴|后裔|獾|火蜥蜴|金属工人|进化体|鲸|巨神灵|骏鹰|卡马利|蛞蝓|拉高耶夫|拉玛苏|拉弥亚|狼獾|棱镜|鬣狗|羚羊|骆驼|猫鼬|绵羊|魔判官|牡蛎|墓生|农奴|诺格|欧格|麒麟|蠕虫|萨拉卡斯|塞连|三分节|砂|山羊|石化鸡蛇|水母|斯立兹|四分节|松鼠|苏拉卡|碎片|索泰利|兔|乌贼|巫婆|无面鬼|无畏舰|蝎子|信使|雪貂|驯鹿|眼|鼹鼠|异狮|翼狮|鹦鹉螺|映影|原牛|章鱼|整备师|紫貂|紫河马|自动机|士兵|战士|浪客|骑士|斥候|弓箭手|狂战士|杀手|法术师|祭师|僧侣|德鲁伊|神器师|修行僧|反抗军|贩商|海盗|伙伴|驾手|秘教徒|奴仆|旗手|忍者|塑法师|突变体|武士|野蛮人|佣兵|游牧人|长老|衍生|孽裔|懦夫|钳手|市民|逃亡者|幸存者|平原|海岛|沼泽|山脉|树林|沙漠|巢穴|处所|克撒的塔|克撒的矿脉|克撒的动力炉结界|灵气|诅咒|祭祠|陷阱|禁咒|符箓|古咒|基定|杰斯|莉莲娜|茜卓|妮莎|阿耶尼|贾路|寇斯|艾紫培|波拉斯|萨坎|索霖|泰兹瑞|寇斯|凡瑟|卡恩|提勃|多美代|波拉斯|瓦丝卡|多密|基定|拉尔|谢纳戈斯|安梭苛|奇奥拉|戴克|妃雅丽兹|达雷迪|尼希兹|泰菲力|娜希丽|乌金|娜尔施|雅琳|卡娅|多温|莎希莉)]+
	example: 人类
	
keyword parameter type:
	name: color
	description: 有色颜色识别
	optional: false
	match: [(白|蓝|黑|红|绿|white |blue |black |red |green )]+
	example: 白

keyword parameter type:
	name: english_number
	match: (up to )?(a|an|one|two|three|four|five|six|seven|eight|nine|ten| )
	refer script:
		name: as a numeral
		description: Changes english number to numeral
		script: \{digital_number({input}.value)\}
keyword parameter type:
	name: chinese_number
	match: ( up to )?(一|二|两|三|四|五|六|七|八|九|十)
	
keyword parameter type:					 																		   
	name: a
	match: [an?]*
keyword parameter type:
	name: *s
	match: [a-z]s?
keyword parameter type:
	name: nonland
	match: ( n?o?n?l?a?n?d? ?|非地)
keyword parameter type:
	name: mill
	match: mills?
keyword parameter type:
	name: iterate
	match: [., ](t?w?i?c?e?|t?h?r?e?e?|f?o?u?r?|f?i?v?e?|s?i?x?|s?e?v?e?n?|X?)?( ?t?i?m?e?s?)?
	refer script:
		name: as words
		description: Use the iteration word (twice, three times, etc)
		script: \{iterate_fix({input})\}
	refer script:
		name: as number
		description: Use the iteration word (twice, three times, etc)
		script: \{iterate_digits({input})\}
keyword parameter type:
	name: energy
	match: [^>]([Pp]ays?( an additional| any amount of)?|gets?( that many)?) [E]+
	separator before is: [^>]([Pp]ays?( an additional| any amount of)?|gets?( that many)?)[ ]
	reminder script: length(input)

############################# All Magic keywords
# By JrEye and Neko_Asakami, Updated by Pichoro and Buttock1234, Continued updates by cajun

# Alpha初版
keyword:
	keyword: 飞行
	match: 飞行
	mode: evergreen
	reminder: 只有具飞行或延势异能的生物才能阻挡它。
keyword:
	keyword: 先攻
	match: 先攻
	mode: evergreen
	reminder: 此生物会比不具先攻异能的生物提前造成战斗伤害。
keyword:
	keyword: 践踏
	match: 践踏
	mode: evergreen
	reminder: 如果此生物将分配的伤害足以消灭所有阻挡它的生物，你可以将它所剩余数量的伤害分配给防御牌手或鹏洛客。
keyword:
	keyword: Banding
	match: 结合
	mode: old
	reminder: 任意数量具结合异能的生物，以及至多一个不具结合异能的生物，可以结合为一个「团队」进行攻击。当此「团队」被生物阻挡时，该阻挡生物的战斗伤害可以由主动牌手在它所阻挡的生物之间任意分配。当此「团队」进行阻挡时，其阻挡的攻击生物的战斗伤害可以由防御牌手在阻挡它的生物之间任意分配。
####任意数量具结合异能的生物，以及至多一个不具结合异能的生物，可以结合为一个「团队」进行攻击。当此「团队」被生物阻挡时，该阻挡生物的战斗伤害可以由主动牌手（而不是防御牌手）在它所阻挡的生物之间任意分配。当此「团队」进行阻挡时，其阻挡的攻击生物的战斗伤害可以由防御牌手（而不是主动牌手）在阻挡它的生物之间任意分配。	
keyword:
	keyword: 地形者
	match:$<atom-param>typecn</atom-param>行者
	mode: old
	reminder: 只要防御牌手操控{if match(param1.value, match: " land$") or contains(param1.value, match: "雪境") or contains(param1.value, match:"基本") or contains(param1.value, match:"传奇") then "{to_lower(param1)}" else "{param1}"}，此生物就不能被阻挡。
keyword:
	keyword: 潜居
	match: 潜居<atom-param>typecn</atom-param>
	mode: old
	reminder: 除非防御牌手操控{if match(param1.value, match: "地") or contains(param1.value, match: "雪境") or contains(param1.value, match:"基本") or contains(param1.value, match:"传奇") then "{to_lower(param1)}" else "{param1}"}，否则此生物不能攻击。当你未操控{if match(param1.value, match: " 地") or contains(param1.value, match: "雪境") or contains(param1.value, match:"基本") or contains(param1.value, match:"传奇") then "{to_lower(param1)}" else "{param1}"}时，牺牲此生物.
keyword:
	keyword: 反色保护
	match: 反<atom-param>color</atom-param>保护
	mode: old
	reminder: {if has_pt() then "此生物" else "此永久物"}不能被{param1}色的东西所阻挡、指定为目标、造成伤害、或是被结附。
keyword:
	keyword: 反其它保护
	match: 反<atom-param>name</atom-param>保护
	mode: old
	reminder: {if has_pt() then "此生物" else "此永久物"}不能被{param1}的东西所阻挡、指定为目标、造成伤害、或是被结附。
keyword:
	keyword: 重生
	match: 重生
	mode: action
	reminder: 如果{if has_pt() then "此生物" else "它"}下一次于本回合中将被消灭，则它不会被消灭，{if has_pt() then "而是改为将它横置，移除受过的所有伤害，并将它移出战斗。" else "而是改为将它横置。"}
# Legends传承
keyword:
	keyword: 与它者结合
	match: 与其它<atom-param>name</atom-param>结合
	mode: old
	reminder: 任意{param1}可与至少一个具有「与其它{param1}结合」异能的生物结合为一个「团队」进行攻击。当此「团队」被生物阻挡时，该阻挡生物的战斗伤害可以由主动牌手在它所阻挡的生物之间任意分配。当此「团队」进行阻挡时，其阻挡的攻击生物的战斗伤害可以由防御牌手在阻挡它的生物之间任意分配。
keyword:
	keyword: 狂暴
	match: 狂暴$<atom-param>number</atom-param>
	mode: old
	reminder: 每当此生物被阻挡时，从第二个生物起，每个阻挡它的生物都使它得$+{param1}/+{param1}$直到回合结束。
# Ice Age冰雪时代
keyword:
	keyword: 累积维持
	match: 累积维持$<atom-param>cost</atom-param>
	mode: old
	reminder: 在你的维持开始时，在此永久物上放置一个岁月指示物，然后除非你为其上每个岁月指示物各支付其维持费用，否则牺牲之。
# Mirage海市蜃楼
keyword:
	keyword: 时间跳跃
	match: 时间跳跃
	mode: old
	reminder: 于你的重置步骤开始时，若它未跃离，将它跃离，否则将它跃回。已跃离的永久物视同不在场上。
keyword:
	keyword: 侧面攻击
	match: 侧面攻击
	mode: expert
	reminder: 每当一个不具侧面攻击之生物阻挡此生物时，该阻挡生物得$-1/-1$直到回合结束。
keyword:
	keyword: 次元幽影
	match: 次元幽影
	mode: expert
	reminder: 此生物只能阻挡具次元幽影异能的生物，亦只能被具此异能的生物阻挡。
# Unglued鸡飞
keyword:
	keyword: 牛仔行者
	match: 牛仔行者
	mode: old
	reminder: 只要防御牌手穿着牛仔布做的衣服，此生物就不能被阻挡。
# Tempest暴风雪
keyword:
	keyword: 购回
	match: 购回$<atom-param>cost</atom-param>
	mode: expert
	reminder: 你施放此咒语时可以{for_mana_costs(add:"额外支付$",param1)},若你如此作，则结算此咒语时将它放入你的手牌。
# Urza's Saga克撒传
keyword:
	keyword: 返响
	match: 返响$<atom-param>cost</atom-param>
	mode: expert
	reminder: 在你的维持开始时，若你在你前一个维持开始后才操控它，则除非你支付其返响费用，否则牺牲之。
keyword:
	keyword: 循环
	match: 循环$<atom-param>cost</atom-param>
	mode: expert
	reminder: {param1}，弃掉此牌：抓一张牌.
# Sixth Edition第六版
